{
    "compilerOptions": {
        "target": "es2016",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react-native",
        "rootDir": "src",
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "*"
            ]
        },
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "jest.config.ts"
    ],
    "extends": "expo/tsconfig.base"
}